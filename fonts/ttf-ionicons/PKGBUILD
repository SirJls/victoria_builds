pkgname=ttf-ionicons
_pkgname=ionicons
pkgver=1.0
pkgrel=1
pkgdesc="The premium icon font for Ionic Framework"
arch=('any')
url="http://github.com/driftyco/ionicons"
license=('MIT')
depends=('fontconfig' 'xorg-font-utils')
install=ttf-ionicons.install
source=($_pkgname.ttf::https://github.com/driftyco/ionicons/raw/v2.0.0/fonts/ionicons.ttf)
sha256sums=('6fb7a322fbd6b62ef6886848ef5bec4df887fdbe53b52ac30ad597b766a815e1')

package()
{
  install -d $pkgdir/usr/share/fonts/TTF/
  install -m66 $srcdir/$_pkgname.ttf $pkgdir/usr/share/fonts/TTF/
}
